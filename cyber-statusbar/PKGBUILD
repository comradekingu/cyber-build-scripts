pkgname=cyber-statusbar
pkgver=r37.e2d6e7e
pkgrel=1
pkgdesc=""
arch=('x86_64')
url=""
license=('unknown')
source=("$pkgname-src::git+https://github.com/cyberos/cyber-statusbar.git")
md5sums=('SKIP')
makedepends=('cmake' 'git')
depends=('qt5-base' 'qt5-x11extras' 'qt5-quickcontrols2' 'dbus' 'meuikit' 'kwindowsystem')
pkgver() {
    cd "$pkgname-src"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$pkgname-src"
    mkdir -p build
    cd build
    cmake .. -DCMAKE_INSTALL_PREFIX:PATH=/usr ..
    make -j$(nproc)
}

package() {
    cd "$pkgname-src/build"
    make DESTDIR="$pkgdir/" install
}
