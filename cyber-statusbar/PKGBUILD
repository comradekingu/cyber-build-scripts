pkgname=cyber-statusbar
pkgver=r37.e2d6e7e
pkgrel=1
pkgdesc=""
arch=('x86_64')
url=""
license=('unknown')
source=("$pkgname::git+https://github.com/cyberos/cyber-statusbar.git")
md5sums=('SKIP')
makedepends=('cmake')
depends=('kwayland' 'qt5-base' 'qt5-quickcontrols2' 'kwindowsystem' 'meuikit')
pkgver() {
    cd "$pkgname"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$pkgname"
    mkdir -p build
    cd build
    cmake .. -DCMAKE_INSTALL_PREFIX:PATH=/usr ..
    make -j$(nproc)
}

package() {
    cd "$pkgname/build"
    make DESTDIR="$pkgdir/" install
}
