pkgname=cyber-workspace
pkgver=r313.e6e2c63
pkgrel=2
pkgdesc=""
arch=('x86_64')
url=""
license=('unknown')
source=("$pkgname-src::git+https://github.com/cyberos/cyber-workspace.git")
md5sums=('SKIP')
makedepends=('cmake' 'extra-cmake-modules' 'git' 'pkgconf')
depends=('kwayland' 'kwindowsystem' 'kwin' 'qt5-base' 'qt5-tools' 'qt5-quickcontrols2' 'polkit' 'polkit-qt5' 'meuikit' 'cyber-wallpapers' 'xdg-user-dirs')

pkgver() {
    cd "$pkgname-src"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$pkgname-src"
    mkdir -p build
    cd build
    cmake ..
    make -j$(nproc)
}

package() {
    cd "$pkgname-src/build"
    make DESTDIR="$pkgdir/" install
}
