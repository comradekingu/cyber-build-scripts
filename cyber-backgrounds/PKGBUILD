pkgname=cyber-backgrounds
pkgver=r2.11cbeaa
pkgrel=1
pkgdesc=""
arch=('x86_64')
url=""
license=('unknown')
source=("$pkgname-src::git+https://github.com/cyberos/cyber-backgrounds.git")
md5sums=('SKIP')
makedepends=('cmake')
depends=()
groups=('cyber')
pkgver() {
    cd "$pkgname-src"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$pkgname-src"
    mkdir -p build
    cd build
    cmake ..
}

package() {
    cd "$pkgname-src/build"
    make DESTDIR="$pkgdir/" install
}
