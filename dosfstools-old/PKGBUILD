pkgname=dosfstools-old
_pkgname=dosfstools
pkgver=4.1
pkgrel=1
pkgdesc="DOS filesystem utilities (old version)"
arch=(x86_64)
depends=('glibc')
provides=('dosfstools')
conflicts=('dosfstools')
source=(https://github.com/$_pkgname/$_pkgname/releases/download/v$pkgver/$_pkgname-$pkgver.tar.gz
)
url="https://github.com/dosfstools/dosfstools"
license=('GPL2')
md5sums=('904948bd091b8f6b28eeb164bc0a986f')


build() {
  cd $_pkgname-$pkgver
  ./configure --prefix=/usr --libexecdir=/usr/lib \
              --sbindir=/usr/bin --mandir=/usr/share/man \
              --docdir=/usr/share/doc/dosfstools --enable-compat-symlinks
   make
}

package () {
   cd $_pkgname-$pkgver
   make DESTDIR="$pkgdir" install
}
