pkgname=cyber-terminal
pkgver=r15.bca4610
pkgrel=3
pkgdesc=""
arch=('x86_64')
url=""
license=('unknown')
source=("$pkgname-src::git+https://github.com/cyberos/cyber-terminal.git")
md5sums=('SKIP')
makedepends=('cmake' 'extra-cmake-modules' 'git')
depends=('qt5-base' 'qt5-quickcontrols2' 'qt5-graphicaleffects' 'meuikit')
groups=('cyber')
pkgver() {
    cd "$pkgname-src"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$pkgname-src/qmltermwidget"
	mkdir -p build
	cd build
	qmake ..
	make -j$(nproc)

	cd "../.."
    mkdir -p build
    cd build
    cmake ..
    make -j$(nproc)
}

package() {
	cd "$pkgname-src/qmltermwidget/build"
	make INSTALL_ROOT="$pkgdir" install
    cd "../../build"
    make DESTDIR="$pkgdir/" install
}
