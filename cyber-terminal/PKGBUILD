pkgname=cyber-terminal
pkgver=r18.53d1191
pkgrel=2
pkgdesc=""
arch=('x86_64')
url=""
license=('unknown')
source=("$pkgname-src::git+https://github.com/cyberos/cyber-terminal.git")
md5sums=('SKIP')
makedepends=('cmake' 'extra-cmake-modules' 'git')
depends=('qt5-base' 'qt5-quickcontrols2' 'qt5-graphicaleffects' 'meuikit')
groups=('cyber')
pkgver() {
    cd "$pkgname-src"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$pkgname-src"
    mkdir -p build
    cd build
    cmake ..
    make -j$(nproc)
}

package() {
    cd "$pkgname-src/build"
    make DESTDIR="$pkgdir/" install
}
